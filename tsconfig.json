{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "dom",
      "es2015",
      "es6",
      "es7"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
   "./typings/**/*",
   "./**/*", "main", "helpers", "content", "index.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
	  "useCache": true,
  },
  "typeRoots": [
    "./node_modules/@types",
    "./typings"
  ],
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ]
}
